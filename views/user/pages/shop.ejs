<section class="bg-img1 txt-center p-lr-15 p-tb-12" style="background-image: url('images/bg-01.jpg');">
	<h2 class="ltext-105 cl0 txt-center">
			Contact
	</h2>
</section>

<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
	<div class="container">
			<div class="flex-w flex-sb-m p-b-52">
					<div class="flex-w flex-l-m filter-tope-group m-tb-10">
							<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
									All Products
							</button>
					</div>

					<div class="flex-w flex-c-m m-tb-10">
							<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
									<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
									<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
									Filter
							</div>

							<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
									<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
									<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
									Search
							</div>
					</div>

					<!-- Search product -->
					<div class="dis-none panel-search w-full p-t-10 p-b-15">
							<div class="bor8 dis-flex p-l-15">
									<form action="/shop" method="GET">
											<button type="submit" class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
													<i class="zmdi zmdi-search"></i>
											</button>
											<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search" placeholder="Search" id="search" value="<%= searchQuery %>">
									</form>
							</div>
					</div>

					<!-- Filter -->
					<div class="dis-none panel-filter w-full p-t-10">
							<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
									<div class="filter-col1 p-r-15 p-b-27">
											<div class="mtext-102 cl2 p-b-15">
													Sort By
											</div>
											<ul>
													<li class="p-b-6">
															<a href="/shop?sortBy=priceLowToHigh&priceRange=<%= priceRange %>&search=<%= searchQuery %>" class="filter-link stext-106 trans-04 <%= sortBy === 'priceLowToHigh' ? 'active-filter' : '' %>">
																	Price: Low to High
															</a>
													</li>
													<li class="p-b-6">
															<a href="/shop?sortBy=priceHighToLow&priceRange=<%= priceRange %>&search=<%= searchQuery %>" class="filter-link stext-106 trans-04 <%= sortBy === 'priceHighToLow' ? 'active-filter' : '' %>">
																	Price: High to Low
															</a>
													</li>
											</ul>
									</div>

									<div class="filter-col2 p-r-15 p-b-27">
											<div class="mtext-102 cl2 p-b-15">
													Filter by Price
											</div>
											<ul>
													<li class="p-b-6">
															<a href="/shop?priceRange=all&sortBy=<%= sortBy %>&search=<%= searchQuery %>" class="filter-link stext-106 trans-04 <%= priceRange === 'all' ? 'active-filter' : '' %>">
																	All Prices
															</a>
													</li>
													<li class="p-b-6">
															<a href="/shop?priceRange=under25&sortBy=<%= sortBy %>&search=<%= searchQuery %>" class="filter-link stext-106 trans-04 <%= priceRange === 'under25' ? 'active-filter' : '' %>">
																	Under ₹1000
															</a>
													</li>
													<li class="p-b-6">
															<a href="/shop?priceRange=25to50&sortBy=<%= sortBy %>&search=<%= searchQuery %>" class="filter-link stext-106 trans-04 <%= priceRange === '25to50' ? 'active-filter' : '' %>">
																	Between ₹1000 and ₹2000
															</a>
													</li>
													<li class="p-b-6">
															<a href="/shop?priceRange=50to75&sortBy=<%= sortBy %>&search=<%= searchQuery %>" class="filter-link stext-106 trans-04 <%= priceRange === '50to75' ? 'active-filter' : '' %>">
																	Between ₹2000 and ₹5000
															</a>
													</li>
													<li class="p-b-6">
															<a href="/shop?priceRange=75to100&sortBy=<%= sortBy %>&search=<%= searchQuery %>" class="filter-link stext-106 trans-04 <%= priceRange === '75to100' ? 'active-filter' : '' %>">
																	Above ₹5000
															</a>
													</li>
											</ul>
									</div>
							</div>
					</div>
			</div>

			<div class="row isotope-grid">
					<% for (let i = 0; i < getalldata.length; i++) { %>
							<% if (getalldata[i].isListed) { %>
									<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
											<!-- Block2 -->
											<div class="block2">
													<div class="block2-pic hov-img0">
															<img src="/admin/uploads/<%= getalldata[i].primaryImage[0].name %>" alt="IMG-PRODUCT">
															<!-- Add your other content here -->
													</div>

													<div class="block2-txt flex-w flex-t p-t-14">
															<div class="block2-txt-child1 flex-col-l ">
																	<a href="/product?id=<%= getalldata[i]._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
																			<%= getalldata[i].title %>
																	</a>

																	<span class="stext-105 cl3">
																			Rs<%= getalldata[i].productPrice %>
																	</span>
															</div>

															<div class="block2-txt-child2 flex-r p-t-3">
																
																			<button type="submit" onclick="addtoWishlist('<%= getalldata[i]._id %>')" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
																					<img class="icon-heart1 dis-block trans-04" src="assets/images/icons/icon-heart-01.png" alt="ICON">
																					<img class="icon-heart2 dis-block trans-04 ab-t-l" src="assets/images/icons/icon-heart-02.png" alt="ICON">
																			</button>
																
															</div>
													</div>
											</div>
									</div>
							<% } %>
					<% } %>
			</div>

			     <!-- Pagination -->
					 <div class="flex-c-m flex-w w-full p-t-45">
            <ul class="pagination">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="/shop?page=<%= i %>&search=<%= searchQuery %>&sortBy=<%= sortBy %>&priceRange=<%= priceRange %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </div>
	</div>
</div>

<style>
	.active-filter {
			font-weight: bold;
			color: #000;
	}
	.pagination {
        list-style: none;
        display: flex;
        padding: 0;
    }
    .pagination .page-item {
        margin: 0 5px;
    }
    .pagination .page-item .page-link {
        color: #000;
        text-decoration: none;
        padding: 10px 15px;
        border: 1px solid #ddd;
    }
    .pagination .page-item.active .page-link {
        background-color: #000;
        color: #fff;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
	  function addtoWishlist( productId) {

$.ajax({
  url: '/addToWishlist/'+ productId,
  method: 'GET',
}).then(response => {
  if (response.message) {
    Swal.fire({
      title: "Product Added",
      text: "Product Added to Wishlist Successfully",
      icon: "success",
    }).then(() => {
      console.log("Product Get Successfull");
    })
  } else if (response.exists) {
    Swal.fire({
      title: "Product Already Exists",
      text: "Product is Already Present In Wishlist",
    }).then(() => {
      console.log("Product Alredy Exists in Wishlist");
    });
  } else {
    Swal.fire({
			title: "Product Added",
      text: "Product Added to Wishlist Successfully",
      icon: "success",
    });
  }
})
}

</script>
