<div class="container pt-150">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 "><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold"><%= user.email %></span><span class="text-black-50"><%= user.username %></span><span> </span></div>
            <div class=" d-flex flex-column  text-center p-1 "><button class="btn btn-primary profile-button " type="button"><a href="/address">Addresses</a></button></div>
            <div class=" d-flex flex-column  text-center p-1 "><button class="btn btn-primary profile-button " type="button">Orders</button></div>
            <div class=" d-flex flex-column  text-center p-1"><button class="btn btn-primary profile-button " type="button"><a href="/reset">Reset Password</a></button></div>
        </div>
        
                                                                                                                                                                                                                                                                            <div class="col-md-9">
            <div class="osahan-account-page-right shadow-sm bg-white p-4 h-100">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade active show" id="addresses" role="tabpanel"
                        aria-labelledby="addresses-tab">
                        <h4 class="font-weight-bold mt-0 mb-4">Manage Addresses</h4>
                        <button class="btn-hover list-btn-style">
                            <a class="btn-hover list-btn-style" href="/addAddress">Add Address</a>
                        </button>
                        <br> 
                        <br>   

                        <div class="row">
                            <% if (address.length> 0) { %> <% address.forEach((element, index)=> { %>
                                    <div class="col-md-4 mb-4">
                                        <div class="card">
                                            <!-- Card Header with Edit and Delete buttons -->
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="card-title">Address <%= index + 1 %>
                                                </h5>
                                                <div>
                                                    <a href="/editAddress?id=<%= element._id %>"
                                                        class="btn btn-info btn-sm mr-2">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    

                                                   
                                                    <% if (index>0) { %>
                                                        <a href="#" onclick="showConfirmation('<%= element._id %>')"
                                                            class="btn btn-danger btn-sm">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                        <% } %>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text">
                                                    <%= element.user_name %>
                                                </p>
                                                <p class="card-text">
                                                    <%= element.address %>
                                                </p>
                                                <p class="card-text">
                                                    <%= element.town %>
                                                </p>
                                                <p class="card-text">
                                                    <%= element.state %>
                                                </p>
                                                <p class="card-text">
                                                    <%= element.pincode %>
                                                </p>
                                                <p class="card-text">
                                                    <%= element.phone %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <h3 class="text-center text-warning">
                                                You have no saved address! , Please add an Address.
                                            </h3>
                                            <% }%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

