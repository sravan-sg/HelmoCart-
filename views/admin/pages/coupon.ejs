
<section class="content-main">
   
  <a href="/admin/coupon/add"><button class="btn btn-primary  float-right m-4">Add Coupon</button></a>
  <!-- Page Content -->
  <div class="container ml-2">
      <h1>Coupon Management</h1>
  <br>
  
      <div class="col-lg-12 d-flex align-items-stretch">
          
      <div class="card w-100">
          <div class="card-body p-4">
              <h5 class="card-title fw-semibold mb-4">Coupons</h5>
              <div class="table-responsive">
                  <table id="couponTable" class="table table-bordered">
                      <thead>
                          <tr>
                              <th>Code</th>
                              <th>Coupon Type</th>
                              <th>Coupon Amount</th>
                              <th>Description</th>
                              <th>Min Amount</th>
                              <th>Max Amount</th>
                              <th>Expiry Date</th>
                              <th>Actions</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% coupons?.forEach(coupon => { %>
                          <tr>
                              <td class="text-center"><%= coupon?.code %></td>
                              <td class="text-center"><%= coupon?.type.toUpperCase() %></td>
                              <td class="text-center"><%= coupon?.value %></td>
                              <td class="text-center"><%= coupon?.description %></td>
                              <td class="text-center"><%= coupon?.minAmount %></td>
                              <td class="text-center"><%= coupon?.maxAmount %></td>
                              <td class="text-center">
                                  <%= new Date(coupon?.expiryDate).toLocaleDateString('en-US', { year: 'numeric', month:
                                  'long', day: 'numeric' }) %>
                              </td>
                              <td class="text-center">
                                  <a href="/admin/coupon/edit/<%= coupon?._id %>"  >
                                      <!-- <i class="ti ti-edit text-white"></i> -->
                                      <button class="btn btn-info btn-sm "><i class="material-icons md-edit pb-1"></i></button>
</a>
                                  <!-- <a class="btn btn-sm btn-danger"><i class="ti ti-trash text-white"></i></a> -->
                              </td>
                          </tr>
                          <% }) %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>
</div>
</section>
<script>
  $(document).ready(function () {
      $("#couponTable").DataTable();
  });
</script>