<section class="content-main">
    <div class="container mt-4">
        <h3>User Management</h3>
        <table class="table table-hover" id="example">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                  
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                      
                        <td>
                            <% if (user.isBLock) { %>
                                <span class="badge bg-danger">Blocked</span>
                            <% } else { %>
                                <span class="badge bg-success">Active</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (user.isBLock) { %>
                                <a href="/admin/useractions?id=<%= user._id %>&action=unblock" class="btn btn-success btn-sm">Unblock</a>
                              <% } else { %>
                                <a href="/admin/useractions?id=<%= user._id %>&action=block" class="btn btn-danger btn-sm">Block</a>
                              <% } %>
                           
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    </section>
    
    <script>
    
        $(document).ready(function () {
            new DataTable('#example');
    
        })
    </script>